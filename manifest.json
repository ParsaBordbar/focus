{
  "manifest_version": 3,
  "name": "Focus",
  "version": "1.0",
  "description": "Hide all distraction, like YT shorts.",
  "permissions": ["scripting", "storage", "tabs"],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Focus",
    "default_popup": "popup.html"
  }
}
